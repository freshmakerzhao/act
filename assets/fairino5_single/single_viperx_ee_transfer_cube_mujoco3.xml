<mujoco>
    <include file="scene.xml"/>
    <include file="fairino_fr5_dependencies.xml"/>

    <equality>
        <weld body1="mocap_right" body2="fairino_fr5/wrist3_link" solref="0.005 1" solimp="0.99 0.99 0.001" />
    </equality>
    
    <worldbody>
        <include file="fairino_fr5.xml" />
        
        <!-- <body mocap="true" name="mocap_right" pos="0 0.396 0.425"> -->
        <body mocap="true" name="mocap_right" pos="0 0.396 0.38">
            <site pos="0 0 0" size="0.003 0.003 0.03" type="box" name="mocap_right_site1" rgba="1 0 0 1"/>
            <site pos="0 0 0" size="0.003 0.03 0.003" type="box" name="mocap_right_site2" rgba="1 0 0 1"/>
            <site pos="0 0 0" size="0.03 0.003 0.003" type="box" name="mocap_right_site3" rgba="1 0 0 1"/>
            <!-- <geom type="sphere" size="0.05" rgba="1 0 0 0.5" contype="0" conaffinity="0"/> -->
        </body>

        <body name="box" pos="0.2 0.5 0.05">
            <joint name="red_box_joint" type="free" frictionloss="0.01" />
            <inertial pos="0 0 0" mass="0.05" diaginertia="0.002 0.002 0.002" />
            <geom condim="4" friction="2.0 0.05 0.0001" solimp="0.9 0.95 0.001" solref="0.002 1" pos="0 0 0" size="0.02 0.02 0.02" type="box" name="red_box" rgba="1 0 0 1" />
        </body>
        <body name="tray" pos="0.4 0.85 0">
            <geom type="cylinder" size="0.08 0.01" rgba="0.8 0.8 0.2 1" name="yellow_tray"/>
        </body>
    </worldbody>

    <!-- 两个末端执行器 -->
    <actuator>
        <position ctrllimited="true" ctrlrange="0.021 0.057" joint="vx300s_right/left_finger" kp="200"  user="1"/>
        <position ctrllimited="true" ctrlrange="-0.057 -0.021" joint="vx300s_right/right_finger" kp="200"  user="1"/>
    </actuator>
    
    <!-- 初始位置 -->
    <keyframe>
        <key name="init_pose" qpos="0 -1.54 1.45 -1.4 -1.56 -1.56 0.057 -0.057 0.2 0.5 0.05 1 0 0 0" />
    </keyframe>
</mujoco>
<mujocoinclude>
    <visual>
        <map fogstart="1.5" fogend="5" force="0.1" znear="0.1"/>
        <quality shadowsize="4096" offsamples="4"/>
        <headlight ambient="0.4 0.4 0.4"/>
    </visual>
    
    <worldbody>
        <light castshadow="false" directional='true' diffuse='.3 .3 .3' specular='0.3 0.3 0.3' pos='-1 -1 1' dir='1 1 -1'/>
        <light directional='true' diffuse='.3 .3 .3' specular='0.3 0.3 0.3' pos='1 -1 1' dir='-1 1 -1'/>
        <light castshadow="false" directional='true' diffuse='.3 .3 .3' specular='0.3 0.3 0.3' pos='0 1 1' dir='0 -1 -1'/>

        <body name="floor" pos="0 0 0">
            <geom name="floor_geom" type="plane" size="10 10 0.1" rgba="0.5 0.5 0.5 1" conaffinity="1" contype="1"/>
        </body>
        
        <body name="midair" pos="4.0 0 0.2">
            <site pos="0 0 0" size="0.01" type="sphere" name="midair" rgba="1 0 0 0"/>
        </body>

        <camera name="right_pillar" pos="2.0 -4.0 2.0" fovy="78" mode="targetbody" target="midair"/>
        <camera name="top" pos="4.0 0 5.0" fovy="78" mode="targetbody" target="midair"/>
        <camera name="angle" pos="-2.0 4.0 3.0" fovy="78" mode="targetbody" target="excavator_simple/swing"/>
        <camera name="front_close" pos="6.0 0 1.0" fovy="78" mode="targetbody" target="midair"/>
    </worldbody>
</mujocoinclude>